{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Section index</h1>

    <table class="table  w-50 mx-auto mt-5">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>SectionTitle</th>
                <th>SectionDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.sectionTitle }}</td>
                <td>{{ section.sectionDescription }}</td>
                <td>
                    <a href="{{ path('app_admin_section_show', {'id': section.id}) }}">show</a>
                    <a href="{{ path('app_admin_section_edit', {'id': section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_section_new') }}" class="d-flex justify-content-center text-black text-decoration-none">Create new</a>
{% endblock %}
